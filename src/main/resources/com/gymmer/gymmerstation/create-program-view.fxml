<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextArea?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.gymmer.gymmerstation.programCreation.ProgramController">
   <children>
      <HBox prefHeight="30.0" prefWidth="600.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name :" />
            <TextField fx:id="inpName"/>
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="600.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Purpose :" />
            <TextArea fx:id="inpPurpose"/>
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="600.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Length :" />
            <TextField fx:id="inpLength"/>
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="600.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Division :" />
            <ChoiceBox fx:id="inpDivision" prefWidth="150.0" />
            <Button fx:id="btnAddExercise" text="Add Exercise" />
         </children>
      </HBox>
      <Accordion>
        <panes>
          <TitledPane animated="false" text="Division 1">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutY="5.0" prefHeight="166.0" prefWidth="600.0" />
                     </children></AnchorPane>
            </content>
          </TitledPane>
          <TitledPane animated="false" text="Division 2">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
        </panes>
      </Accordion>
      <Button fx:id="btnSave" text="Save" />
      <Button fx:id="btnExit" text="Exit" />
   </children>
</VBox>
